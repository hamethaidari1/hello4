<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <div id="app">
        <%- include('../partials/navbar') %>

        <main id="mainContent">
            <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
                <h1 class="text-3xl font-bold text-secondary-900 mb-8" data-i18n="settingsTitle">Ayarlar</h1>
                
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                  <!-- Settings Sidebar -->
                  <div class="md:col-span-1">
                    <div class="card p-4">
                      <nav class="space-y-1">
                        <a href="#security" class="flex items-center px-4 py-3 text-primary-600 bg-primary-50 rounded-lg font-medium">
                          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                          </svg>
                          <span data-i18n="settingsSecurity">Güvenlik</span>
                        </a>
                      </nav>
                    </div>
                  </div>
    
                  <!-- Settings Content -->
                  <div class="md:col-span-2 space-y-8">
                    <!-- Password Section -->
                    <div id="security" class="card p-6">
                      <h2 class="text-xl font-bold text-secondary-900 mb-6" data-i18n="settingsChangePassword">Şifre Değiştir</h2>
                      <form id="changePasswordForm" class="space-y-4">
                        <div>
                          <label class="block text-sm font-semibold text-secondary-700 mb-2" data-i18n="settingsCurrentPassword">Mevcut Şifre</label>
                          <input type="password" id="currentPassword" required class="w-full">
                        </div>
                        <div>
                          <label class="block text-sm font-semibold text-secondary-700 mb-2" data-i18n="settingsNewPassword">Yeni Şifre</label>
                          <input type="password" id="newPassword" required class="w-full">
                        </div>
                        <div class="pt-4">
                          <button type="submit" class="btn-primary" data-i18n="settingsSavePassword">Şifreyi Güncelle</button>
                        </div>
                      </form>
                    </div>
    
                    <!-- Danger Zone -->
                    <div class="card p-6 border-red-200 bg-red-50">
                      <h2 class="text-xl font-bold text-red-700 mb-2" data-i18n="settingsDeleteAccount">Hesabı Sil</h2>
                      <button id="deleteAccountBtn" class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors font-medium" data-i18n="settingsDeleteBtn">Hesabımı Sil</button>
                    </div>
                  </div>
                </div>
              </div>
        </main>

        <%- include('../partials/footer') %>
    </div>
    <%- include('../partials/scripts') %>
</body>
</html>
