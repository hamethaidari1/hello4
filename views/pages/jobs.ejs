<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <div id="app">
        <%- include('../partials/navbar') %>

        <main id="mainContent">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
                <div class="mb-8">
                  <h1 class="text-3xl md:text-4xl font-bold text-secondary-900 mb-2" data-i18n="jobsPageTitle">İş İlanları</h1>
                  <p class="text-secondary-600" data-i18n="jobsPageSubtitle">Size uygun iş fırsatlarını keşfedin</p>
                </div>
    
                <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
                  <!-- Filters Sidebar -->
                  <div class="lg:col-span-1">
                    <div class="card p-6 sticky top-20">
                      <h3 class="font-bold text-lg text-secondary-900 mb-4" data-i18n="filtersTitle">Filtreler</h3>
                      
                      <!-- Sector Filter -->
                      <div class="mb-6">
                        <label class="block text-sm font-semibold text-secondary-700 mb-2" data-i18n="filterSector">Sektör</label>
                        <select id="filterSector" class="w-full">
                          <option value="" data-i18n="filterAllSectors">Tüm Sektörler</option>
                          <option value="technology" data-i18n="sectorTechnology">Teknoloji</option>
                          <option value="finance" data-i18n="sectorFinance">Finans</option>
                          <option value="health" data-i18n="sectorHealth">Sağlık</option>
                        </select>
                      </div>
    
                      <!-- City Filter -->
                      <div class="mb-6">
                        <label class="block text-sm font-semibold text-secondary-700 mb-2" data-i18n="filterCity">Şehir</label>
                        <select id="filterCity" class="w-full">
                          <option value="" data-i18n="filterAllCities">Tüm Şehirler</option>
                          <option value="istanbul">İstanbul</option>
                          <option value="ankara">Ankara</option>
                          <option value="izmir">İzmir</option>
                        </select>
                      </div>
    
                      <button id="clearFiltersBtn" class="btn-secondary w-full" data-i18n="btnClearFilters">Filtreleri Temizle</button>
                    </div>
                  </div>
    
                  <!-- Jobs List -->
                  <div class="lg:col-span-3">
                    <div class="mb-4 flex items-center justify-between">
                      <p class="text-secondary-600">
                        <span id="jobsCount"><%= jobs.length %></span> <span data-i18n="jobsFound">ilan bulundu</span>
                      </p>
                      <select id="sortJobs" class="px-4 py-2 border border-secondary-300 rounded-lg">
                        <option value="newest" data-i18n="sortNewest">En Yeni</option>
                        <option value="oldest" data-i18n="sortOldest">En Eski</option>
                      </select>
                    </div>
                    
                    <div id="jobsList" class="space-y-4">
                      <% jobs.forEach(job => { %>
                        <div class="card p-6 cursor-pointer">
                            <div class="flex justify-between items-start mb-4">
                              <div class="flex-1">
                                <h3 class="text-lg font-bold text-secondary-900 mb-2 hover:text-primary-600 transition-colors">
                                  <%= job.title.en || job.title.tr || job.title %>
                                </h3>
                                <p class="text-secondary-600 font-medium mb-1"><%= job.company %></p>
                                <div class="flex flex-wrap items-center gap-2 text-sm text-secondary-500">
                                  <span class="flex items-center">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                    <%= job.city %>
                                  </span>
                                </div>
                              </div>
                            </div>
                            
                            <div class="mb-4">
                              <span class="inline-block px-3 py-1 bg-primary-100 text-primary-700 rounded-full text-sm font-medium">
                                <%= job.sector %>
                              </span>
                            </div>
                            
                            <p class="text-secondary-600 text-sm mb-4 line-clamp-2">
                                <%= job.description.en || job.description.tr || job.description %>
                            </p>
                            
                            <button class="btn-primary w-full" data-i18n="btnApply">
                              Apply Now
                            </button>
                        </div>
                      <% }); %>
                    </div>
                  </div>
                </div>
              </div>
        </main>

        <%- include('../partials/footer') %>
    </div>
    <%- include('../partials/scripts') %>
</body>
</html>
